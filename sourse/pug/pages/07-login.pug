extends layout/main.pug


include ../blocks/s-content/_s-content.pug
include ../blocks/s-contact/_s-contact.pug

block title
	title title

block pagecontent
	+b.s-intro--login
		.container
			+e.head
				.row
					+e.col-head.col-auto
					.col
						img.s-intro__head-logo(src="img/desktop-logo.png", alt="logo")
					+e.col-head.col-auto.text-right
						img(src="img/18+.png", alt="")
			+e.body
				.text-center
					img.res-i.title-img(src="img/title.png", alt="")
				+form-wrap
					+e.text Введите пароль и войдите в Крипту
					+input("email","E-mail")(required)
					+input("password","Пароль")()
					+e.restore.text-center
						a.link-underlined.text-white.d-inline-block(href="") Забыли пароль?
					+e.btn--bg-opacity.mt-0(href="#") войти
				+b.soc
					+e.text.text-center.w-100 или
					+e.item(href="#")
						+icon('fb')

					+e.item(href="#")
						+icon('vk')
				+e.foot-text.text-center При входе на сайт вы соглашаетесь на &nbsp;
					|
					a.link-underlined.text-white.d-inline-block.popup-with-move-anim(href="#modal-policy") обработку персональных данных

