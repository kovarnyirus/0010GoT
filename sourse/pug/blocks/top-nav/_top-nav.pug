	+b.nav-menu--mobile.d-md-none
		+e.link(href="#")
			+icon('IGoT_cons-05')

		+e.link--current(href="#")
			+icon('IGoT_cons-04')
		+e.link(href="#")
			+icon('IGoT_cons-01')
		+e.link(href="#")
			+icon('IGoT_cons-02')

